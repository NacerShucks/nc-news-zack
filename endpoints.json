{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "article_id": 1,
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6,
          "article_img_url":
          "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds comment to article",
    "queries": [],
    "requestBodyFormat": {
      "username": "username",
      "body": "text of the comment"},
    "exampleResponse": {
      "comment": {
        "body": "text of the comment",
        "votes": 0,
        "author": "username",
        "article_id": 9,
        "created_at": 1584205320000
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the given article_id",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "body": "Oh, I've got compassion running out of my nose, pal! I'm the Sultan of Sentiment!",
          "votes": 16,
          "author": "butter_bridge",
          "article_id": 9,
          "created_at": 1586179020000,
          "comment_id": 1
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article by id",
    "queries": [],
    "exampleResponse": 
    {
      "title": "Seafood substitutions are increasing",
      "article_id": 1,
      "topic": "cooking",
      "author": "weegembump",
      "body": "Text from the article..",
      "created_at": "2018-05-30T15:59:13.341Z",
      "votes": 0,
      "article_img_url":
      "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "increments an articles vote property by newVote",
    "queries": [],
    "requestBodyFormat": { "inc_votes": 20 },
    "exampleResponse": 
    {
      "title": "Seafood substitutions are increasing",
      "article_id": 1,
      "topic": "cooking",
      "author": "weegembump",
      "body": "Text from the article..",
      "created_at": "2018-05-30T15:59:13.341Z",
      "votes": 20,
      "article_img_url":
      "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes the given comment",
    "queries": [],
    "exampleResponse": 204
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse":[
      {
        "username": "lurker",
        "name": "do_nothing",
        "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png"
      }
    ]
  },
  "GET /api/users/:username": {
    "description": "serves up a user by username",
    "queries": [],
    "exampleResponse": {
      "username": "lurker",
      "name": "do_nothing",
      "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png"
    }
  }
}
